                    <Image Grid.Column="0" Height="16">
                        <Image.Source>
                            <DrawingImage Drawing="{StaticResource Cog}"/>
                        </Image.Source>
                    </Image>
                    <TextBlock Grid.Column="1" Margin="12 0 0 0">Settings</TextBlock>
